{
  "apps": [{
    "name": "momentum-frontend",
    "script": "./node_modules/.bin/vite",
    "args": ["--host", "0.0.0.0", "--port", "3000"],
    "cwd": "/home/user/webapp",
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000"
    },
    "watch": false,
    "instances": 1,
    "exec_mode": "fork",
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}